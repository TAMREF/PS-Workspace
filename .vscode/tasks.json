{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-O2",
                "-Wall",
                "-lm",
                "-static",
                "-std=c++17",
                "-DTAMREF",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build in debug mode",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O2",
                "-Wall",
                "-lm",
                "-static",
                "-std=c++17",
                "-DTAMREF",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ]
        },
        {
            "label": "execute",
            "type": "shell",
            "command": "time ./${fileBasenameNoExtension}",
            "group":"test",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "execute with input file",
            "type": "shell",
            "command": "time ./${fileBasenameNoExtension} < ${input:Inputfilename}",
            "group":"test",
            "options":{
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "make new practice",
            "type": "shell",
            "command": "${workspaceFolder}/Resources/newPrac.sh",
            "args": [
                "${workspaceFolder}",
                "${input:platformName}",
                "${input:problemId}",
            ],
            "problemMatcher": []
        },
        {
            "label": "make new contest",
            "type": "shell",
            "command": "${workspaceFolder}/Resources/newContest.sh",
            "args": [
                "${workspaceFolder}",
                "${input:platformName}",
                "${input:problemId}",
                "${input:numproblem}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "platformName",
            "description": "What platform do you want to practice on?",
            "default": "BOJ",
            "options": ["BOJ", "CodeForces", "AtCoder", "ojuz", "PE", "etc"]
        },
        {
            "type": "promptString",
            "id": "problemId",
            "description": "What is the problem's Id?",
            "default": "0",
        },
        {
            "type": "promptString",
            "id": "Inputfilename",
            "description": "What is the input file name?",
            "default": "input.in"
        },
        {
            "type": "promptString",
            "id": "numproblem",
            "description": "How many problems are in the contest?",
            "default": "0"
        }
    ]
}
